<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    
	<TextView
        android:id="@+id/SessionCreate_lbl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@+string/Session_Name" />

    <TextView
        android:id="@+id/SessionName_lbl"
        android:textSize="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@+string/Session_Name" />

    <EditText
        android:id="@+id/SessionName_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />
	<TextView
        android:id="@+id/maxPlayers_lbl"
        android:textSize="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@+string/Session_Name" />
    <Spinner
        android:id="@+id/maxPlayers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="false" />
    <TextView
        android:id="@+id/SessionType_lbl"
        android:textSize="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@+string/Session_Name" />
    <Spinner
        android:id="@+id/sessiontype"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="false" />

     <TextView
        android:id="@+id/Password_lbl"
        android:textSize="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@+string/Session_Name" />
    <EditText
        android:id="@+id/password_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword" />
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@+string/Create" />

        <Button
            android:id="@+id/back_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="false"
            android:text="@+string/Voltar" />
    </RelativeLayout>

</LinearLayout>